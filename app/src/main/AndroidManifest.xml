<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.note">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Note">

        <activity android:name=".activity.AddNoteActivity"
            />
        <activity android:name=".activity.GroupsEditorActivity"
            />
        <activity android:name=".activity.ImageNoteActivity"
            android:noHistory="false"/>
        <activity android:name=".activity.ListActivity"
            />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NoteViewerActivity"
            />
        <activity android:name=".activity.SearchActivity"
            />
        <activity android:name=".activity.SettingsActivity"
            android:noHistory="false"/>
        <activity android:name=".activity.SoundEditorActivity"
            />
        <activity android:name=".activity.SpeechToTextActivity"
            />
        <activity android:name=".activity.TagEditorActivity"
            />
        <activity android:name=".activity.TextEditorActivity"
            />
        <activity android:name=".activity.VoiceToTextActivity"
            />

        <activity android:name=".activity.XTemplateEmptyActivity"
            />

        <activity android:name=".test.DebugActivity"
            android:noHistory="true"/>
        <activity android:name=".test.TestActivity"
            />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.thesis.note.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


    </application>
</manifest>