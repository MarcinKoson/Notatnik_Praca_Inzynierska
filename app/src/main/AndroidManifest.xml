<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.note">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Note">
        <activity android:name=".DebugActivity"
            android:noHistory="true"/>

        <activity android:name=".activity.TemplateEmptyActivity"
            />
        <activity android:name=".activity.TextEditorActivityOld"
            />
        <activity android:name=".activity.TextEditorActivity"
            />
        <activity android:name=".activity.ListActivity"
            />
        <activity android:name=".activity.AddNoteActivity"
            />
        <activity android:name=".activity.SearchActivity"
            />
        <activity android:name=".activity.GroupsEditorActivity"
            />
        <activity android:name=".activity.TagEditorActivity"
            />
        <activity android:name="TestActivity"
            />
        <activity android:name=".activity.SettingsActivity"
            android:noHistory="false"/>
        <activity android:name=".activity.ImageNoteActivity"
            android:noHistory="false"/>

        <activity android:name=".activity.VoiceToTextActivity"
            />
        <activity android:name=".activity.NoteViewerActivity"
            />
        <receiver android:name=".TestWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/test_widget_info" />
        </receiver>

        <activity android:name=".activity.MainActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>


    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
</manifest>