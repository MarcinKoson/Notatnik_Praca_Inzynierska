<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DebugActivity">

    <Button
        android:id="@+id/dbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DB test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/textEditorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Editor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dbButton" />

    <Button
        android:id="@+id/deleteDBbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear DB"
        app:layout_constraintStart_toEndOf="@+id/dbButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/templatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Template"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditorButton" />

    <Button
        android:id="@+id/addGropus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add gropus"
        app:layout_constraintStart_toEndOf="@+id/deleteDBbutton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Test"
        app:layout_constraintStart_toEndOf="@+id/addGropus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/voicetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/templatebutton" />

</androidx.constraintlayout.widget.ConstraintLayout>